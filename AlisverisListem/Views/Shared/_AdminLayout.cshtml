<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap style -->
    <link id="callCss" rel="stylesheet" href="~/themes/bootshop/bootstrap.min.css" media="screen" />
    <link href="~/themes/css/base.css" rel="stylesheet" media="screen" />

    <!-- Bootstrap style responsive -->
    <link href="~/themes/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/themes/css/font-awesome.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="header">
        <div class="container-fluid">
            <div id="welcomeLine" class="row">

            </div>
            <!-- Navbar ================================================== -->
            <div id="logoArea" class="navbar">

                <div class="navbar-inner">
                    <a class="brand" href="/home/urunler"><img src="~/themes/images/logo2.png" alt="Logo" width="60" height="60"  /></a>
                    <form class="form-inline navbar-search" method="post" action="/urunyonetim/Urunler">
                        <input id="urunAd" name="urunAd" class="srchTxt" type="text" placeholder="Ürün Ara" />

                        <button type="submit" id="submitButton" class="btn btn-primary" style="height:40px;width:100px;">Ara</button>
                    </form>
                    <ul id="topMenu" class="nav pull-right">
                        <li class=""><a href="/urunyonetim/urunler">Ürünler</a></li>
                        <li class=""><a href="/kategoriyonetim/kategoriler">Kategoriler</a></li>

                        <li class="">
                            <a href="/account/logout" role="button" style="padding-right:0"><span class="btn btn-large btn-success">Çıkış Yap</span></a>

                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="mainBody">
        <div class="container">





            @RenderBody()



        </div>
    </div>
    <!-- Footer ================================================================== -->
    <div id="footerSection">
        <div class="container">
            <div class="row">

            </div><!-- Container End -->

        </div>
        <br />

        <!-- Placed at the end of the document so the pages load faster ============================================= -->
        <script src="~/themes/js/jquery.js" type="text/javascript"></script>
        <script src="~/themes/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="~/themes/js/bootshop.js"></script>
</body>
</html>
