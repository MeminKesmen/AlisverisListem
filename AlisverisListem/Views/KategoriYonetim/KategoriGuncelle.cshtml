@model Kategoriler

@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>KategoriGuncelle</h1>


<div class="well">
    @using (Html.BeginForm(actionName: "KategoriGuncelle", controllerName: "KategoriYonetim", method: FormMethod.Post, htmlAttributes: new { @class = "form-actions" }))
    {
        <div class="control-group">

            <input asp-for="KategoriId" class="form-control" type="hidden" />

        </div>
        <div class="control-group">
            @Html.LabelFor(m => m.KategoriAd, htmlAttributes: new { @class = "control-label" })

            <div class="controls">
                @Html.TextBoxFor(m => m.KategoriAd, htmlAttributes: new { @class = "form-control" })

            </div>
            @Html.ValidationMessageFor(m => m.KategoriAd, message: "", htmlAttributes: new { style = "color:red;" })
        </div>

        <div class="control-group">
            <div class="controls">

                <input class="btn btn-large btn-success" type="submit" value="Güncelle">
            </div>
        </div>

    }

</div>




