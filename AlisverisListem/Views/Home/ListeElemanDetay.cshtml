@model ListeElemanViewModel

@{
    ViewData["Title"] = "Ürün Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well pagination-centered">



    <h3>@Model.UrunAd </h3>
    <img src="~/Resimler/@Model.UrunResim" width="300px" height="300px" alt="Urun Resim" />
    @using (Html.BeginForm(actionName: "ListeElemanDetay", controllerName: "Home"))
    {
        <div class="control-group">
            <div class="control-group">
                <input asp-for="ListeElemanId" class="form-control" type="hidden" />
            </div>
            <div class="controls">
                @Html.TextArea(expression: "Not", htmlAttributes: new { rows = "4", placeholder = "Not Ekle", style = "width: 50%; height: 150px; padding: 12px 20px; box-sizing: border-box; border: 2px solid #ccc; border-radius: 4px; background-color: #f8f8f8; font-size: 16px; resize: none;" })
            </div>
            @Html.ValidationMessage("Not", message: "", htmlAttributes: new { style = "color:red;" })
            <div class="controls">
                <button type="submit" class="btn btn-large btn-primary "> Güncelle <i class=" icon-shopping-cart"></i></button>
            </div>
        </div>
    }


</div>